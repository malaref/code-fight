mixin modal-form(id, title, url, fields)
  .modal.fade(id=id)
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          h5.modal-title= title
          if block
            block
        form.form-horizontal(action=url method="post")
          .modal-body
            each field in fields
              - var field_id = field["id"]
              - var field_name = field["name"]
              - var field_type = field["type"]
              - var field_label = field["label"]
              .form-group
                label.control-label(for= field_id)= field_label
                input.form-control(id= field_id type= field_type name= field_name)
          .modal-footer
            button.btn.btn-default(type="reset")
              | Reset
            button.btn.btn-primary(type="submit")
              | Submit